{% extends 'auth.html.twig' %}

{% block title %} {{name}} {% endblock %}

{% block body %}
    <div class="flex items-center justify-center grow bg-center bg-no-repeat page-bg">
        <div class="card max-w-[370px] w-full">
            {{ form_start(form, {'attr': {'class': 'card-body flex flex-col gap-5 p-10', 'id': 'sign_in_form', 'method': 'get'}}) }}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="text-center mb-2.5">
                    <h3 class="text-lg font-medium text-gray-900 leading-none mb-2.5">
                        Connexion
                    </h3>
                    <div class="flex items-center justify-center font-medium">
                       <span class="text-2sm text-gray-700 me-1.5">
                        Pas de compte ?
                       </span>
                        <a class="text-2sm link" href="{{ path('auth.register') }}">
                            Inscription
                        </a>
                    </div>
                </div>
                <div class="flex flex-col gap-1">
                    {{ form_row(form.email) }}
                </div>
                <div class="flex flex-col gap-1">
                    <div class="flex items-center justify-between gap-1">
                        {{ form_label(form.password) }}
                    </div>
                    <div class="input" data-toggle-password="true">
                        {{ form_widget(form.password) }}
                        <button class="btn btn-icon" data-toggle-password-trigger="true" type="button">
                            <i class="ki-filled ki-eye text-gray-500 toggle-password-active:hidden">
                            </i>
                            <i class="ki-filled ki-eye-slash text-gray-500 hidden toggle-password-active:block">
                            </i>
                        </button>
                    </div>
                </div>
                {{ form_widget(form.submit)}}
                {{ form_row(form._token)}}
            {{ form_end(form, {render_rest: false}) }}
        </div>
    </div>
{% endblock %}
